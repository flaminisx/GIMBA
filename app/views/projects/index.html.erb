<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Name</th>
      <th>Description</th>
      <th>Logo</th>
      <th>Git link</th>
      <th>Trello link</th>
      <th>Needed budget</th>
      <th>Got budget</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.team_id %></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.logo %></td>
        <td><%= project.git_link %></td>
        <td><%= project.trello_link %></td>
        <td><%= project.needed_budget %></td>
        <td><%= project.got_budget %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

